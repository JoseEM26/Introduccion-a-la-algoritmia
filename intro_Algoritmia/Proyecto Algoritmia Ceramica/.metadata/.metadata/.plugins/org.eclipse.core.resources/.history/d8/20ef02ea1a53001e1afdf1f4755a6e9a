            	Vender.setVisible(true);
            }
        });
		
		JMenuItem mntmGenerar = new JMenuItem("Generar reportes\r");
		mnVentas.add(mntmGenerar);
		mntmGenerar.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
